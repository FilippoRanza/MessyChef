<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".time_stop_controller.TimeSelectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textAlignment="center"
            android:text="@string/default_time_string"
            android:id="@+id/selected_time_value"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">


            <ListView

                android:id="@+id/hour_dial"
                android:layout_width="wrap_content"
                android:layout_height="264sp"
                android:layout_weight="1">

            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:paddingTop="111sp"
                android:text=":"/>

            <ListView
                android:id="@+id/minute_dial"
                android:layout_width="wrap_content"
                android:layout_height="264sp"
                android:layout_weight="1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text=":"/>

            <ListView
                android:id="@+id/seconds_dial"
                android:layout_width="wrap_content"
                android:layout_height="264sp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>



</FrameLayout>